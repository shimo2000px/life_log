<header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
  <div class="container">
    <%= link_to "日記アプリ", 
                current_user ? home_path : root_path, 
                class: "navbar-brand fw-bold text-primary" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
            data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav ms-auto">
        <% if logged_in? %>
          <!-- ログイン済みの場合 -->
          <span class="nav-link text-muted">
            <i class="fas fa-user me-1"></i>
            <%= image_tag current_user.profile_image, 
                      class: "rounded-circle me-1", 
                      style: "width: 24px; height: 24px; object-fit: cover;" %>
            <%= current_user.nick_name %>さん
          </span>
          
          <%= link_to "日記投稿", new_post_path, 
                      class: "nav-link",
                      title: "日記投稿" %>
          
          <%= link_to "日記記録", posts_path, class: "nav-link" %>
          
          
          <%= link_to "プロフィール", profile_path, 
                      class: "nav-link",
                      title: "プロフィール" %>
          
          <%= link_to "ログアウト", logout_path, 
                      method: :delete, 
                      class: "nav-link text-danger",
                      data: { confirm: "本当にログアウトしますか？" } %>
        <% end %>
      </div>
    </div>
  </div>
</header>