<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" 
            class="btn-close" 
            onclick="this.parentElement.remove()" 
            aria-label="Close">
    </button>
  </div>
<% end %>