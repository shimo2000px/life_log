<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">ログイン</h2>
      
      <%= form_with url: login_path, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, 'メールアドレス', class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', value: params[:email] %>
        </div>

        <div class="mb-3">
          <%= form.label :password, 'パスワード', class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

        <div class="d-grid">
          <%= form.submit 'ログイン', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to '新規登録', new_user_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div>