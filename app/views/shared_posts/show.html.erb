# 豪華にする　シェアページ

<link rel="stylesheet" href="/share.css">

<div class="container mt-5">
<h1 class="fade-in-up"><%= @post.user.nick_name %>さんの今日の頑張り</h1>
  <div class="diary-board card mb-3 shadow-sm fade-in-up">
    <div class="card-body post-card-body">

      <!-- 日付とタイトル -->
      <div class="mb-3">
        <div class="diary-header card-header bg-success opacity-75 text-white">
          <span class="badge me-2 fs-6 px-3 py-2"><%= @post.diary_date.strftime("%m/%d") %></span>
          <h3 class="card-title d-inline-block mb-0"><%= @post.title %></h3>
        </div>
      </div>

      <!-- 投稿内容 -->
      <p class="card-text me-2 fs-4 px-3 py-2 mb-3"><%= simple_format(@post.body) %></p>


      <!-- ユーザー情報と投稿日時 -->
      <div class="d-flex align-items-center mb-3">
        <div class="me-3">
          <% if @post.user.profile_image.present? %>
            <%= image_tag @post.user.profile_image, 
                          class: "rounded-circle", 
                          style: "width: 60px; height: 60px; object-fit: cover;" %>
          <% else %>
            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" 
                style="width: 60px; height: 60px;">
              <i class="fas fa-user text-muted"></i>
            </div>
          <% end %>
        </div>
        <div>
          <div class="fw-bold text-dark mb-1 fs-7"><%= @post.user.nick_name %></div>
          <small class="text-muted">
            <i class="bi bi-calendar me-1"></i>
            <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
          </small>
        </div>
      </div>

      <!-- ✅ いいねカウンター（アニメーション対応） -->
      <div class="likes-counter-instagram" data-target="<%= @post.auto_likes_count || 0 %>" data-index="0">
        <div class="likes-block">
          <span class="heart-icon" data-original="♡" data-liked="♥">♡</span>
          <span class="count">0</span>
          <div class="hearts-container"></div>
        </div>
      </div>



    </div>
  </div>
</div>

    <div class="cta-section ms-4">
      <h3 class="fade-in-up">あなたも今日の頑張りをシェアしませんか？</h3>
      <%= link_to "日記を書いてみる", root_path, class: "btn btn-primary fade-in-up" %>
    </div>

<script src="/share.js"></script>