<% content_for(:title, '新規登録') %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center">新規登録</h1>

        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <%= form_with model: @user, locale: true do |f| %>
        <div class="mb-3">
          <%= f.label :last_name, '苗字', class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :first_name, '名前', class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :nick_name, 'ニックネーム', class: "form-label" %>
          <%= f.text_field :nick_name, class: "form-control" %>
          <div class="form-text">この名前で表示されます</div>
        </div>
        
        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :password, 'パスワード', class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
          <div class="form-text">パスワードは6文字以上で登録してください</div>
        </div>
        
        <div class="mb-3">
          <%= f.label :password_confirmation, 'パスワード確認', class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="text-center mt-3">
          <%= f.submit '登録', class: 'btn btn-primary' %>
          <% end %>
        </div>

      <div class="text-center mt-3">
        <%= link_to 'ログインはこちら', login_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>