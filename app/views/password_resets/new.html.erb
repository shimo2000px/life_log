<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>パスワードリセット</h1>
      
      <%= form_with url: password_resets_path, method: :post, local: true do |form| %>
        <div class="form-group">
          <%= form.label :email, 'メールアドレス' %>
          <%= form.email_field :email, class: 'form-control', required: true %>
        </div>
        
        <%= form.submit '送信', class: 'btn btn-primary' %>
      <% end %>
      
      <%= link_to 'ログイン画面に戻る', login_path, class: 'btn btn-link' %>
    </div>
  </div>
</div>