<link rel="stylesheet" href="/likes_counter.css">
<% content_for(:title, '日記一覧') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="diary-index fade-in-up">あなたの日記一覧</h2>
    <%= link_to '新しい日記を書く', new_post_path, class: 'btn btn-primary fade-in-up' %>
  </div>

  <% if @posts.any? %>
    <% @posts.each_with_index do |post, index| %>
      <div class="diary-board card mb-3 shadow-sm fade-in-up">
        <div class="card-body post-card-body">
          <!-- 日付とタイトル -->
          <div class="mb-3">
            <div class="diary-header card-header bg-success opacity-75 text-white">
              <span class="badge  me-2 fs-6 px-3 py-2"><%= post.diary_date.strftime("%m/%d") %></span>
              <h5 class="card-title d-inline-block mb-0 "><%= post.title %></h5>
          </div>
            </div>

          <!-- 投稿内容 -->
          <p class="card-text me-2 fs- px-3 py-2 mb-3"><%= truncate(post.body, length: 100) %></p>

          <div class="d-flex justify-content-between align-items-center">
            <!-- ユーザーアイコンと名前をセット -->
            <div class="d-flex align-items-center">
              <div class="me-3">
                <% if current_user.profile_image.present? %>
                  <%= image_tag current_user.profile_image, 
                      class: "rounded-circle", 
                      style: "width: 50px; height: 50px; object-fit: cover;" %>
                <% else %>
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" 
                      style="width: 50px; height: 50px;">
                    <i class="fas fa-user text-muted"></i>
                  </div>
                <% end %>
              </div>

              <!-- ユーザー名と投稿日時 -->
              <div>
                <div class="fw-bold text-dark mb-1"><%= current_user.nick_name %></div>
                <small class="text-muted">
                  <i class="bi bi-calendar me-1"></i>
                  <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                </small>
              </div>
            </div>

            <!-- 右側：詳細ボタンといいね機能 -->
            <!-- 全体を横並びにする -->
            <div class="d-flex justify-content-between align-items-center">
              
              <!-- 左側：いいね機能 -->
              <div class="likes-counter-instagram me-2" data-target="<%= post.auto_likes_count %>" data-index="<%= index %>">
                <div class="likes-block">
                  <span class="heart-icon" data-original="♡" data-liked="♥">♡</span>
                  <span class="count">0</span>
                  <div class="hearts-container"></div>
                </div>
              </div>

                <!-- 右側：詳細ボタン・Twitterボタン -->
              <!-- 右側：詳細ボタン・Twitterボタン -->
              <div class="btn-group">
                <%= link_to post_path(post), 
                            data: { method: :post }, 
                            class: "btn btn-outline-primary", 
                            title: "詳細" do %>
                  <i class="bi bi-info-circle"></i> 詳細
                <% end %>

                <% if current_user == post.user %>
                  <% tweet_text = "この日記をシェアします！" %>
                  <% tweet_url = "https://twitter.com/intent/tweet?url=#{CGI.escape(shared_post_url(post.share_token, host: 'd4bc3ac321f7.ngrok-free.app'))}&text=#{CGI.escape(tweet_text)}" %>
                    <%= link_to share_to_twitter_post_path(post),
                              class: "btn btn-outline-success ms-2",
                              target: "_blank",
                              rel: "noopener noreferrer",
                              title: "Xで共有" do %>
                    <i class="bi bi-twitter"></i> Xで共有
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @posts, theme: 'bootstrap-5' %>
  <% else %>
    <div class="text-center py-5">
      <p class="text-muted">まだ日記がありません。</p>
      <%= link_to '最初の日記を書く', new_post_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script src="/likes_counter.js"></script>